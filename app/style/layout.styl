// import setup before stylus23!
@import './setup.styl'
@import 'stylus23'
@import './lib/fonts'

body
    font-family 'Federant', 'Helvetica', 'sans serif', 'Arial'
    height 100%
    width 100%
    margin 0
    padding 0
    // rem base
    font-size 14px
    +MQ('m')
        font-size 16px

.wrapper
  padding 0 $layout__wrapper_padding
  transition padding 1s ease-out

.page
  @extend .wrapper
